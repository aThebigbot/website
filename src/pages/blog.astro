---
import PageSlider from "../components/PageSlider.astro";

const posts = (await Astro.glob('./blog/*.{md,mdx}'))
---


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thebigbot - Blog</title>
</head>
<body>

    <div>
        <h1>Blog</h1>
        <PageSlider />
        <p>Welcome to Thebigbot's blog. Here you can find all blog posts about programming, various experiences and more! I post without precise frequencies, infact I do this only for funny!</p>

        <div>
          <h3>Posts</h3>
            <ul>
                  {
                    posts.map((post: any) => {
                      return (
                        <li>
                          <i>
                            {post.frontmatter.date.day}/{post.frontmatter.date.month}/{post.frontmatter.date.year}
                          </i>
                          <a href={post.url}>{post.frontmatter.title}</a>
                        </li>
                      );
                    })
                  }
            </ul>
        </div>
    </div>

    <style>
        body {
        font-family: Verdana, sans-serif;
        margin: auto;
        padding: 20px;
        max-width: 65ch;
        text-align: left;
        background-color: #fff;
        word-wrap: break-word;
        overflow-wrap: break-word;
        line-height: 1.7;
        color: #444;
      }

      h1 {
        font-size: 2.5rem;
        icon-size: 2.5rem;
        line-height: 1;
      }

      bold {
        font-weight: bold;
      }

      a {
        background-color: #fff;
        border: none;
        color: #444;
        padding: 10px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
        font-size: 1rem;
      }

      a:hover {
        color: rgb(13, 162, 231);
      }

      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }

      li {
        display: inline;
      }

      i {
        color: #888;
        padding: 0 10px;
      }
    </style>
</body>
</html>