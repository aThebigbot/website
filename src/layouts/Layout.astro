---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="I'm Valerio, and I'm a 14-year-old computer enthusiast" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  body {
    @apply bg-background text-text;
  }

  @media (prefers-color-scheme: dark) {
    body {
      @apply bg-background-dark text-text-dark;
    }
  }

  a {
    @apply font-semibold;
  }

  a.link {
    @apply ml-1 mr-1 text-white;
  }
</style>
