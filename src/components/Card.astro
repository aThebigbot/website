---
interface Props {
  title: string;
  desc: string;
}

const { title, desc } = Astro.props as Props;
---

<div class="roundend-md mb-5 ml-16 mr-16 mt-5 p-6 shadow-md">
  <h1 class="text-center text-2xl font-semibold">{title}</h1>
  <p class="mt-3">{desc}</p>

  <a href="https://github.com/vclemenzi">
    <button
      class="mr-3 mt-5 w-full rounded-md bg-gorange p-2 pl-7 pr-7 font-semibold text-text hover:underline"
    >
      View more on Github!
    </button>
  </a>
</div>
